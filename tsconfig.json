{
	"compilerOptions": {
		"target": "es2017",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["es2017", "dom", "dom.iterable"],
		"noEmitOnError": true,
		"noEmit": false,
		"strict": true,
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"paths": {
			"*": ["*"]
		},
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"types": ["node"],
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": ["**/*.ts", "**/*.scss", "**/*.d.ts"],
	"exclude": ["node_modules"]
}
